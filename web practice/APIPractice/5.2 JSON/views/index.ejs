</head>

<body>
  <h1>Taco Town ğŸŒ®</h1>

  <form action="/recipe" method="POST" class="buttons">
    <button type="submit" value="chicken" name="choice">ğŸ—</button>
    <button type="submit" value="beef" name="choice">ğŸ¥©</button>
    <button type="submit" value="fish" name="choice">ğŸŸ</button>
  </form>
  <div id="recipeContainer" class="hidden">

    <!-- If no recipe yet, show: -->
     <% console.log(locals.reData) %>
     <% if (!locals.reData) { %>
    <h2>Pick your favourite taco ingredient ğŸ‘†</h2>
     <% } else { %>
      <h2><%= reData["name"]%></h2>
     <% } %>
    <!-- Else, show the recipe name e.g. <h2>Recipe name</h2>-->

    <h3>Ingredients:</h3>
    <ul id="ingredientsList">
      <%if (!locals.reData) {%>
        <li>Protein name, protein preparation</li>
        <li>Salsa name</li>
        <li>Every other topping</li>

      <%} else {%>
          <!-- Display Protein Information -->
          <li>Protein: <%= reData.ingredients.protein.name %> (Preparation: <%= reData.ingredients.protein.preparation %>)</li>
        
          <!-- Display Salsa Information -->
          <li>Salsa: <%= reData.ingredients.salsa.name %> (Spiciness: <%= reData.ingredients.salsa.spiciness %>)</li>
        
          <!-- Display Toppings -->
          <li>Toppings:</li>
            <% reData.ingredients.toppings.forEach((topping) => { %>
              <li><%= topping.name %> (Amount: <%= topping.quantity %>)</li>
            <% }) %>
      <%}%>
    </ul>



  </div>
</body>

</html>